<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="alexandr_flyagin.gpslock.MainActivity">

        <Button
            android:id="@+id/btn_grant_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grant permissions" />

        <Button
            android:id="@+id/btn_start_fused_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_grant_permission"
            android:text="Start location" />

        <Button
            android:id="@+id/btn_stop_fused_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_start_fused_location"
            android:text="Stop location" />

        <Button
            android:id="@+id/btn_send_fused_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_stop_fused_location"
            android:text="Send location" />

        <TextView
            android:id="@+id/mLatitudeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_send_fused_location"
            android:layout_marginTop="10dp"
            android:background="@drawable/back"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mLongitudeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mLatitudeTextView"
            android:layout_marginTop="10dp"
            android:background="@drawable/back"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mAltitudeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mLongitudeTextView"
            android:layout_marginTop="10dp"
            android:background="@drawable/back"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mBearingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mAltitudeTextView"
            android:layout_marginTop="10dp"
            android:background="@drawable/back"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mSpeedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mBearingTextView"
            android:layout_marginTop="10dp"
            android:background="@drawable/back"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mAccuracyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mSpeedTextView"
            android:layout_marginTop="10dp"
            android:background="@drawable/back"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mAccuracyTextView"
            android:layout_marginTop="10dp"
            android:background="@drawable/back"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mCityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mDateTextView"
            android:layout_marginTop="10dp"
            android:background="@drawable/back"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mPostalcodeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mCityTextView"
            android:layout_marginTop="10dp"
            android:background="@drawable/back"
            android:textSize="18sp" />
    </RelativeLayout>
</ScrollView>
